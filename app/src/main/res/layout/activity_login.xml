<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:background="#00000000"
        android:theme="@style/Kit.Light"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar_login" />

    <TextView
        android:layout_marginTop="16dp"
        android:text="Login"
        android:paddingStart="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="#000000"
        android:textSize="64dp"
        android:typeface="monospace"
        android:fontFamily="serif" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_margin="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_phone"
            android:inputType="phone"
            android:hint="手机号" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/input_pass"
            android:inputType="textPassword"
            android:hint="密码" />
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:button="@drawable/my_check"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:text="记住我"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox_save_user_info" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:text="注册"
            android:background="@drawable/button_outline_press"
            android:layout_margin="32dp"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            android:id="@+id/button_try_sign_up"
            android:layout_weight="1" />

        <Button
            android:text="登录"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_try_login"
            android:layout_weight="1" />
    </LinearLayout>


</LinearLayout>